  mod NATURALS is
    sort Nat .
    op 0 : -> Nat [ctor] .
    op s : Nat -> Nat [ctor] .
    op _+_ : Nat Nat -> Nat .
  
    vars X Y : Nat .
    rl [base] : 0 + Y => Y .
    rl [ind] : s(X) + Y => s(X + Y) .
  endm
